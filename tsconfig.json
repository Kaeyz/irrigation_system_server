{
	"compilerOptions": {
			"module": "commonjs",
			"esModuleInterop": true,
			"target": "es6",
			"noImplicitAny": true,
			"moduleResolution": "node",
			"sourceMap": true,
			"outDir": "dist",
			"allowSyntheticDefaultImports": true
	},
	"include": [
			"src/**/*.ts",
	],
	"exclude" : [
		"node_modules"  /* exclude everything in  node_modules */
	]
}
